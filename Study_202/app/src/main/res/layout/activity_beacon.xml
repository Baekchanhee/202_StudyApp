<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/join_bg"
    tools:context=".BeaconActivity">

    <TextView
        android:id="@+id/beacon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="아직연결안되있음"/>

    <TextView
        android:id="@+id/beacon_above"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="출석가능 비콘 다시 검색"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/beaconbutton"/>

    <ImageView
        android:id="@+id/beaconbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/no_beacon"
        android:layout_centerInParent="true" />

</RelativeLayout>
